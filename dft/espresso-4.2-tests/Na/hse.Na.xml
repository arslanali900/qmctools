<?xml version="1.0"?>                                    
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.mcc.uiuc.edu/qmc/schema/molecu.xsd">
<project id='na.HSE.TN'  series="0">                                                                                                                 
<application name="qmcapp" role="molecu" class="serial" version="0.2">                                                                          
</application>                                                                                                                                  
</project>                                                                                                                                      
<random seed="1" />                                                                                                            
<include href='Na.HSE.TN.ptcl.xml' />                                                                                                                    
<include href='Na.HSE.TN.wfs.xml' />
<qmcsystem >                                                                                                                                    

<hamiltonian name="h0" type="generic" target="e">
<constant name="IonIon" type="coulomb" source="ion0" target="ion0"/>
<pairpot name="ElecElec" type="coulomb" source="e" target="e"/>
<pairpot type="pseudo" name="PseudoPot" source="ion0" wavefunction="psi0" format="xml">
  <pseudo elementType="Na" href="Na.TN_DF.xml"/>
</pairpot>
<pairpot type="cpp" name="CorePol" source="ion0" target="e">
    <element name="Na" alpha="0.9776" rb="1.0307"/>
</pairpot>
<estimator type="momentum" psi="psi0" source="e">
<kpoints mode="auto" grid="7" samples="4">
</kpoints>
<q mode="auto">
</q>
</estimator>
</hamiltonian>
</qmcsystem>
